<section class="special-offers">
    <h2 class="section-title-servicio"><%= sliderTitle %></h2>

    <!-- Product Slider -->

    <div class="gallery productSlider js-flickity" data-flickity-options='{ "wrapAround": true }' >
            <% for( let i = 0; i < sliderProducts.length; i++ ) { %>
            
            
            <a href="/products/detail/<%- sliderProducts[i].id %>">
                <div class="carousel-cell  productSlide">
                    <div class="productDiscount"><%- sliderProducts[i].discount %>% OFF</div>
                    <img src="/images/products/<%- images[i].images%>" alt="<%- sliderProducts[i].name %>">
                    <p class="productName"> 
                        <% if (sliderProducts[i].nombre > 30) { %>
                            <%- `${sliderProducts[i].nombre.slice(0,30)}...` %>
                        <% } else { %>
                            <%= sliderProducts[i].nombre %>
                        <% } %>
                    </p>
                    <h4 class="productPrice">$<%- sliderProducts[i].price - sliderProducts[i].price * sliderProducts[i].discount / 100 %></h4>
                </div>
            </a>
        <% } %>
    </div>

</section> 