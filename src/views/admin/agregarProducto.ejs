<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')%>
<body>
    <%- include('../partials/header-administrador.ejs')%>
        <main class="tablero-agregar-producto-administrador">
            <div class="contenedor-formulario-agregar-producto">
                <form class="formulario-agregar-producto" autocomplete="off">
                    <div class="contenedor-agregar-administrador">
                        <div class="datos-productos-administrador">
                            <label for="agregar-nombre">Nombre</label>
                            <div class="entrada-agregar-dato">
                                <i class="fas fa-pencil-alt"></i>
                                <input class="input-agregar-dato" type="text" id="agregar-nombre" placeholder="Nombre del nuevo producto">
                            </div>
                        </div>
                        <div class="datos-productos-administrador">
                            <label for="agregar-precio">Precio</label>
                            <div class="entrada-agregar-dato">
                                <i class="fas fa-dollar-sign"></i>
                                <input class="input-agregar-dato" type="text" id="agregar-precio" placeholder="Precio del nuevo producto">
                            </div>
                        </div>
                        <div class="descripcion-productos-administrador">
                            <label for="descripcion">Descripción del producto</label>
                            <div>
                                <textarea class="textarea-administrador" name="descripcion" id="descripcion" cols="" rows="10"></textarea>
                            </div>
                        </div>    
                    </div>
                    <div class="contenedor-seleccionar-administrador">
                        <div class="select-opciones-administrador">
                            <div class="select-opcion-administrador">
                                <select class="seleccion-administrador">
                                    <option disabled selected>Categorías</option>
                                    <option value="accesorios">Accesorios</option>
                                    <option value="alimentos">Alimentos</option>
                                    <option value="cuchas">Cuchas</option>
                                    <option value="higiéne">Higiéne</option>
                                    <option value="salud">Salud</option>
                                </select>
                            </div>
                            <div class="select-opcion-administrador">
                                <select class="seleccion-administrador">
                                    <option disabled selected>Marcas</option>
                                    <option value="Bravecto">Bravecto</option>
                                    <option value="Cat chow">Cat chow</option>
                                    <option value="pedigree">Pedigree</option>
                                    <option value="Power">Power</option>
                                    <option value="Raza">Raza</option>
                                </select>
                            </div>
                        </div>
                        <p class="titulo-formulario-agregar">Agregar imagenes</p>
                        <div class="agregar-imagenes-administrador">
                            <div class="agregar-imagen-administrador"><i class="fas fa-plus"></i></div>
                            <div class="agregar-imagen-administrador"><i class="fas fa-plus"></i></div>
                            <div class="agregar-imagen-administrador"><i class="fas fa-plus"></i></div>
                            <div class="agregar-imagen-administrador"><i class="fas fa-plus"></i></div>
                        </div>
                    </div>
                    <div class="botones-editar-administrador">
                        <button class="boton-editar-administrador" type="reset">
                            <i class="fas fa-times-circle"></i>
                            <p class="titulo-boton-administrador">Cancelar</p>
                        </button>
                        <button class="boton-editar-administrador" type="submit">
                            <i class="fas fa-check-circle"></i>
                            <p class="titulo-boton-administrador">Guardar</p>
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>   
</body>
</html>