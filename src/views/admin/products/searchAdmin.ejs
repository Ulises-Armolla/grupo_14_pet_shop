<!DOCTYPE html>
<html lang="es">
  <%- include('../../partials/head', {title: 'Resultados de Busqueda'}) %> 

  <body>
  <% if (typeof session.user != "undefined") { %>
      <% if (session.user.rol === 'ROL_ADMIN') { %>
        <%- include('../../partials/header-administracion.ejs') %> 
      <% } else { %>
        <%- include('../../partials/header.ejs') %>
      <% } %>
  <% } else { %>
    <%- include('../../partials/header.ejs') %>
  <% } %>
   
 <div class="container ">
    <div class="result">
<div class="title">
    <h3>resultado producto: <%=search%> </h3>
</div>
      
<% if (resultados.length > 0) { %>
  <% resultados.forEach(resultado => { %>

    <article class="card-search">
        <img
          src="/images/products/<%= resultado.product_images[0].images %> "
          width="100%"
          alt="Foto de cafetera Moulinex"
        />
        <div class="card-content">
          <!-- <div class="icon-truck">
            <i class="fas fa-truck"></i>
          </div> -->
          <hr>
          <div class="product-info">
            <h5 class="product-name"><%= resultado.nombre %> </h5>
            <p class="product-price"><%= resultado.price %> </p>
                </p>
          </div>
          <div class="button-container">
        <form action="/carrito" method="get">
            <button type="submit" class="button-card">comprar</button>
          </form>

          <form action="/productDetail" method="get">
            <button type="submit" class="button-card-ver"><i class="far fa-eye"></i>ver</button>
          </form>
        </div>
        </div>
      </article>
      <% }) %>
    </div>
<% } else { %>

    <p>No se encontraron coincidencias con: <%= search %></p>
<% } %>

    <div class="filtrador">
        <h3>products a filtrar</h3>
        <ul>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
        </ul>
    </div>
    </div>



<%- include('../../partials/footer.ejs') %> 



  </body>
</html>